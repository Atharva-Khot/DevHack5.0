<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        *{
            margin: 0;
            padding: 0;
            width: 100%;
        }

        .header{
            padding:30px 15px;
            position: fixed;
            left: 0;
            top: 0;
            width: 110px;
            height: 100vh;
            background-color: bisque;
            backdrop-filter: blur(5px);
            transition: width 0.5s;

            /* display: flex;
            justify-content: space-between;
            flex-direction: column; */
        }

        .user{
            display: flex; 
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .user div{
            display: none;
        }

        .user-img{
            width: 40px;
            height: 40px;
            border-radius: 50%;
            padding-right: 15px;
        }
        .user-id{
            font-size: 20px;
            font-weight: 600;
            padding-top: 10px;
        }
        ul{
            list-style: none;
            padding-top: 30px;
        }

        ul li{
            margin: 30px 0px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }
        ul li img,.bi{
            /* height: 25px; */
            width: 30px;
            margin-right: 0px;
        }

        ul li p{
            white-space:nowrap ;
            display: none;
        }

        ul li:hover{
            background-color: rgb(210, 158, 36);
        }

        .header:hover{
            width: 150px;
        }

        .header:hover .user div{
            display: block;
        }

        .header:hover .user{
            width: 100%;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(5px);
        }

        .header:hover .user-img{
            margin: 0;
        }

        .header:hover ul li p{
            display: block;
        }

        .header:hover ul li img{
            margin-right: 10px;
        }
        .header:hover ul li{
            justify-content: flex-start;
        }
        .horizontal-line{
            height: 2px;
            margin-top: 10px;
            margin-bottom: 10px;
            background-color: black;
        }
        .space{
            height: 250px;
        }
        
    </style>
</head>
<body>
    <div class="header">
        <div class="user">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSF32V4p_7Pzslf8BxTahhErkfk-TGJN8nZvQ&usqp=CAU" alt="imgg" class="user-img">
            <div>
                <h2 class="user-id"><%=name%></h2>
            </div>
        </div>
        <br>
        <hr class="horizontal-line">

        <ul>
            <li class="coupon-click"><i class="bi bi-wallet2"></i><p>Digital Wallet</p></li>
            <li class="update_meal-click"><i class="bi bi-ticket-detailed"></i><p>Redeem Coupon</p></li>
            <li class="menu-click"><i class="bi bi-menu-app-fill"></i><p>Menu</p></li>

        </ul>
        <div class="space"></div>

        <ul>
            <li class="logout-btn"><i class="bi bi-box-arrow-left"></i><p>Logout</p></li>
        </ul>
    </div>

    <script>
        document.querySelector(".menu-click").addEventListener("click",()=>{
            window.location.href="menu";
        })

        document.querySelector(".coupon-click").addEventListener("click",()=>{
            window.location.href="coupons";
        })

        document.querySelector(".update_meal-click").addEventListener("click",()=>{
            window.location.href="mealUpdate";
        })

        document.querySelector(".logout-btn").addEventListener("click",()=>{
            window.location.href="logout";
        })
    </script>
</body>
</html>